            <column name="passwrod" value="$2a$12$sdYuYBdBzOr2N83osZjeC.at5fVGLKTBeG2kBLZwmdSl2uBzu4QX."/>
        </insert>
        <rollback>
            <delete tableName="users">
                <where>email='user@mail.ru'</where>
            </delete>
        </rollback>
    </changeSet>


</databaseChangeLog>